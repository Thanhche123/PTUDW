@using doanw.Models;
@model IList<Sanpham>
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetitle">
		<h2>Danh sách sản phẩm</h2>
	</div>
	<p>
		<a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="Create">
			<i class="bi bi-file-earmark-text me-1"></i>Thêm sản phẩm
		</a>
	</p>
	<section class="section dashboard">
		<div class="row">
			<div class="col-12">
				<div class="card recent-sales overflow-auto">
					<div class="card-body mt-4">
						<table class="table table-borderless datatable">
							<thead>
								<tr>
									<th class="col-1 text-center">#</th>
									<th class="col-3 text-center">Sản phẩm</th>
									<th class="col-3 text-center">Loại SP</th>
									
									
									<th class="col-1 text-center">Giá</th>
									
									<th class="col-2 text-center">Chức năng</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<th class="text-center" scope="row">@item.ProductID</th>
										<td>
											<a asp-area="Admin" asp-controller="ProductDetails" asp-action="Details"
										   asp-route-id="@item.ProductID" class="text-primary">@item.ProductName</a>
										</td>

										<td class="text-center">@item.CategoryName</td>
										
										<td class="text-center">@item.Price</td>
										
										<td class="text-center">
											<a asp-area="Admin" asp-controller="Product" asp-action="Edit"
										   asp-route-id="@item.ProductID" class="btn btn-primary btn-sm"
										   title="Sửa sản phẩm"><i class="bi bi-pencil"></i></a>

											<a asp-area="Admin" asp-controller="Product" asp-action="Delete"
										   asp-route-id="@item.ProductID" class="btn btn-danger btn-sm"
										   title="Xóa sản phẩm"><i class="bi bi-trash"></i></a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>