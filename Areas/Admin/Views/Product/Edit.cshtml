@model doanw.Models.Sanpham
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xac nhan sua menu</h2>
	</div>
	<div class="container shadow p-5">
		<div class="row pb-2">
			<h2>Sua menu</h2>
		</div>
		<form method="post" asp-action="Edit">
			<div asp-validation-summary="All"></div>
			<div class="form-row">
				<input type="text" class="form-control mb-3" asp-for="ProductID" type="hidden" />

				<div class="form-group col-md-6">
					<label asp-for="ProductName">ProductName</label>
					<input type="text" class="form-control mb-3" asp-for="ProductName" placeholder="Nhap ten menu" />
					<span asp-validation-for="ProductName" class="alert-danger"></span>
				</div>
			</div>

			<div class="form-row">

				
				<div class="form-group col-md-6">
					<div class="alert-danger" asp-validation-summary="ModelOnly"></div>
					<label asp-for="CategoryID">CategoryID</label>
					<select asp-for="CategoryID"
							class="form-control"
							asp-items="@(new SelectList(ViewBag.mnList,"Value","Text"))">
					</select>
				</div>
				
				<div class="form-group col-md-6">
					<label asp-for="Price">Price</label>
					<input type="text" class="form-control mb-3" asp-for="Price" placeholder="Nhap gia" />
					<span asp-validation-for="Price" class="alert-danger"></span>
				</div>

				<div class="form-group col-md-12">
					<label asp-for="LinkImage">Hình ảnh</label>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<button class="btn btn-success" type="button" onclick="openDialog()">Chọn hình ảnh</button>
						</div>
						<input type="text" class="form-control" asp-for="LinkImage" id="file_input" aria-describedby="button-addon2">
					</div>
				</div>
			</div>
			<button type="submit" class="btn btn-lg btn-primary p-2">
				<i class="bi bi-file-plus-fill"></i>Lưu
			</button>
			<a asp-controller="Product" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>

		</form>
	</div>
</main>
@{
	var summernote = new doanw.Areas.Admin.Models.Summernote("#Contents");

}
<partial name="_Summernote" model="summernote" />
