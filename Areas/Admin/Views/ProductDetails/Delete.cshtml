@model doanw.Models.Chitietsp
@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
	<div class="pagetitle">
		<h2>Xác nhận xóa sản phẩm</h2>
	</div>

	<div class="form-row">
		<div class="form-group col-md-6">
			<label asp-for="ProductSCID">ProductSCID</label>
			<input type="text" class="form-control mb-3" asp-for="ProductSCID" disabled>
		</div>

		<div class="form-group col-md-6">
			<label asp-for="ProductName">ProductName</label>
			<input type="text" class="form-control mb-3" asp-for="ProductName" disabled>
		</div>

		<div class="form-group col-md-6">
			<label asp-for="SizeName">SizeName</label>
			<input type="text" class="form-control mb-3" asp-for="SizeName" disabled>
		</div>

		<div class="form-group col-md-6">
			<label asp-for="ColorName">ColorName</label>
			<input type="text" class="form-control mb-3" asp-for="ColorName" disabled>
		</div>

	</div>

	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="ProductSCID" />
		<a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
			<i class="bi bi-arrow-left-circle"></i> Quay lại
		</a>
		<button type="submit" class="btn btn-lg btn-danger p-2">
			<i class="bi bi-trash-fill"></i> Xóa sản phẩm
		</button>
	</form>
</main>